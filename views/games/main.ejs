<%- include('../partials/header') %>

<div id="main-page">
    <div id="timer-page">
        <div class="timer-container">
            <h1 id="countdown"></h1>
        </div>
    </div>

    <div id="questions-container">
        <div id="q-ctn">
            <div id="questions"></div>
        </div>
        <div id="a-ctn">
            <div class="answers" id="ans0"></div>
            <div class="answers" id="ans1"></div>
            <div class="answers" id="ans2"></div>
            <div class="answers" id="ans3"></div>
        </div>
    </div>

    <div id="correct-page">
        <div class="timer-container" id="correct-timer-wrap">
            <div class="correct-text-wrap">
                <h2 class="wrong-text" id="correct-text">Correct!</h2>
            </div>
            <img id="animated-example" class="animated fadeIn" id="correct-img" src="https://i.imgur.com/ncIIfmk.png" title="source: imgur.com" />
            <div class="correct-text-wrap">
                <h2 class="wrong-text" id="correct-text">Pass it!</h2>
            </div>
        </div>
    </div>

    <div id="timeup-page">
        <div class="timer-container">
            <h1>TIME'S UP!</h1>
        </div>
    </div>

    <div id="wrong-page">
        <div id="wrong-timer-wrap">
            <div class="wrong-text-wrap">
                <h2 class="wrong-text">Wrong!</h2>
            </div>
            <img id = "animated-example" class="animated swing" id="red-cup" src="https://i.imgur.com/DdUKVhO.png" title="source: imgur.com" />
            <div class="wrong-text-wrap">
                <h2 class="wrong-text">Take a drink!</h2>
            </div>
        </div>
    </div>
</div>

<script>
    let gameId = '<%= gameId %>';
</script>

<script src="/javascripts/app.js"></script>